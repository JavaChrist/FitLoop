{
  "version": 2,
  "builds": [
    { "src": "vite.config.js", "use": "@vercel/static-build" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "framework": "vite",
  "env": {
    "VITE_FIREBASE_PROJECT_ID": "fitloop-54ac7"
  }
}
